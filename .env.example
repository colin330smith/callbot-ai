# =============================================================================
# CallBot AI - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
ENVIRONMENT=development
# ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-min-32-chars
BASE_URL=http://localhost:8000
# BASE_URL=https://app.callbotai.com

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://callbot:your-db-password@localhost:5432/callbot
DB_PASSWORD=your-secure-database-password

# -----------------------------------------------------------------------------
# Redis (Sessions & Cache)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
# REDIS_URL=redis://:your-redis-password@localhost:6379/0

# -----------------------------------------------------------------------------
# Vapi Voice AI
# Get your keys at https://vapi.ai
# -----------------------------------------------------------------------------
VAPI_API_KEY=your-vapi-api-key
VAPI_ASSISTANT_ID=your-vapi-assistant-id
VAPI_PHONE_NUMBER_ID=your-vapi-phone-number-id

# -----------------------------------------------------------------------------
# Stripe Payments
# Get your keys at https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Pricing Tiers (create these in Stripe Dashboard > Products)
STRIPE_STARTER_PRICE_ID=price_starter_297
STRIPE_GROWTH_PRICE_ID=price_growth_497
STRIPE_AGENCY_PRICE_ID=price_agency_997
# Legacy (defaults to Growth tier)
STRIPE_PRICE_ID=price_...

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Provider: smtp, resend, or sendgrid
EMAIL_PROVIDER=smtp
FROM_EMAIL=noreply@callbotai.com
FROM_NAME=CallBot AI

# SMTP Configuration (if using smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Resend (if using resend)
# RESEND_API_KEY=re_...

# SendGrid (if using sendgrid)
# SENDGRID_API_KEY=SG...

# -----------------------------------------------------------------------------
# Calendar Integration (Optional)
# -----------------------------------------------------------------------------
# Cal.com API Key (for advanced scheduling)
CALCOM_API_KEY=

# Google Calendar OAuth (for direct integration)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# SMS Provider (Missed Call Text-Back & Follow-ups)
# -----------------------------------------------------------------------------
SMS_PROVIDER=twilio

# Twilio (recommended)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Vonage/Nexmo (alternative)
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_PHONE_NUMBER=

# -----------------------------------------------------------------------------
# CRM Integrations
# -----------------------------------------------------------------------------
# GoHighLevel
GHL_API_KEY=
GHL_LOCATION_ID=

# HubSpot
HUBSPOT_ACCESS_TOKEN=

# Slack (for notifications)
SLACK_WEBHOOK_URL=

# -----------------------------------------------------------------------------
# Agency Pricing (Stripe Price IDs)
# -----------------------------------------------------------------------------
STRIPE_AGENCY_STARTER_PRICE_ID=
STRIPE_AGENCY_PRO_PRICE_ID=
STRIPE_AGENCY_ENTERPRISE_PRICE_ID=

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG
LOG_FORMAT=json
# LOG_FORMAT=text
LOG_FILE=

# Service name for logging
SERVICE_NAME=callbotai

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
CSRF_ENABLED=true
ALLOWED_HOSTS=localhost,127.0.0.1,app.callbotai.com

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
SESSION_EXPIRY_DAYS=30

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# FEATURE_SMS_NOTIFICATIONS=true
# FEATURE_CALL_RECORDING=true
# FEATURE_ANALYTICS=true
