# SubShield Environment Variables
# Copy this to .env and fill in your values

# ===================
# API KEYS
# ===================

# Anthropic (Claude) - Get from console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI (Backup) - Get from platform.openai.com
OPENAI_API_KEY=sk-xxxxx

# Stripe - Get from dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ===================
# EMAIL (ConvertKit)
# ===================

# ConvertKit - Get from convertkit.com/account/edit
CONVERTKIT_API_KEY=xxxxx
CONVERTKIT_API_SECRET=xxxxx
CONVERTKIT_FORM_ID=xxxxx

# ===================
# DATABASE (Supabase)
# ===================

# Supabase - Get from app.supabase.com project settings
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=xxxxx
SUPABASE_SERVICE_ROLE_KEY=xxxxx

# ===================
# HOSTING
# ===================

# Vercel - Get from vercel.com/account/tokens
VERCEL_TOKEN=xxxxx

# ===================
# DOMAIN
# ===================

DOMAIN=subshield.io
NEXT_PUBLIC_APP_URL=https://subshield.io

# ===================
# ANALYTICS (Optional)
# ===================

# Plausible or PostHog
ANALYTICS_ID=xxxxx

# ===================
# MISC
# ===================

NODE_ENV=development
